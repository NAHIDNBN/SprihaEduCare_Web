@model List<SprihaQuickTest>

<style>
    h2 {
        color: #f37067;
        text-align: center;
    }

    .optionBtn {
        border: 1px solid #bcbcbc;
        padding: 5px;
        color: gray;
        font-weight: 500;
    }

    .btn-label {
        padding: 10px 20px;
        margin: 5px;
        background-color: #f1f1f1;
        color: gray;
        text-align: center;
        border: 1px solid #bcbcbc;
        width: 48%;
        border-radius: 3px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-label:hover {
            border: 1px solid #bcbcbc;
            box-shadow: inset 0 0 10px 0 #bcbcbc
        }

    input[type="radio"] {
        display: none;
    }

        input[type="radio"]:checked + .btn-label {
            background-color: #bcbcbc;
        }

    .question {
        color: #1a3a54;
    }
</style>




<div class="container">
    <h2>Sample Question for Quick Test</h2>

    <div class="question">
        <form method="post" action="/QuickTest/SubmitAnswers">
            <ol>
                @foreach (var question in Model)
                {
                    <li>
                        @* <strong>[@question.Part]</strong><br /> *@
                        @* <strong>@question.QuestionText</strong><br />
                        <button class="optionBtn" style="width: 47%; margin: 1%;" type="submit" name="answer_@question.Id" value="A">@question.OptionA</button>
                        <button class="optionBtn" style="width: 47%; margin: 1%;" type="submit" name="answer_@question.Id" value="B">@question.OptionB</button>
                        <br/>
                        <button class="optionBtn" style="width: 47%; margin: 1%;" type="submit" name="answer_@question.Id" value="C">@question.OptionC</button>
                        <button class="optionBtn" style="width: 47%; margin: 1%;" type="submit" name="answer_@question.Id" value="D">@question.OptionD</button>
                        <br /> *@

                        <strong class="question">@question.QuestionText</strong><br />
                        <div style="display: flex;">
                            <input type="radio" name="answer_@question.Id" value="A" id="q@question.Id_A" />
                            <label class="btn-label" for="q@question.Id_A">@question.OptionA</label> <br />

                            <input type="radio" name="answer_@question.Id" value="B" id="q@question.Id_B" />
                            <label class="btn-label" for="q@question.Id_B">@question.OptionB</label> <br />

                            <input type="radio" name="answer_@question.Id" value="C" id="q@question.Id_C" />
                            <label class="btn-label" for="q@question.Id_C">@question.OptionC</label> <br />

                            <input type="radio" name="answer_@question.Id" value="D" id="q@question.Id_D" />
                            <label class="btn-label" for="q@question.Id_D">@question.OptionD</label>
                        </div>

                    </li>
                }
            </ol>

            <button type="submit">Submit Answers</button>
        </form>

    </div>
</div>


